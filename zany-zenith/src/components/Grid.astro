---
import { array } from "astro:schema";
import arr from "../assets/arr.svg";
import gradient from "../assets/mesh-grad.jpg";
import floo from "../assets/tpw.png";
---

<div class="grid-section container spacing-section--4xl">
	<div
		class="grid-element grid-1"
	>
		<img src={gradient.src} />
	</div>
	<div class="grid-element grid-2">
		<h2>Uniqueness and transparency in every step.</h2>
	</div>
	<div class="grid-element grid-3">
		<img src={arr.src} />
		<h2>Timeless Design</h2>
	</div>
	<div class="grid-element grid-4">
		<img src={floo.src} />
	</div>
</div>

<style>
	.grid-section {
		display: grid;
		grid-template-columns: repeat(5, 1fr);
		grid-auto-rows: 250px;
		gap: 20px;
	}

	.grid-element {
		border-radius: var(--br-radius);
	}

	.grid-element img {
		height: 100%;
		width: 100%;
		object-fit: cover;
	}

	/* Desktop-specific grid positioning */
	.grid-1 {
		grid-column: span 2;
	}
	.grid-2 {
		grid-column: 3 / span 3;
		background-color: var(--clr-primary);
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
	}
	.grid-3 {
		grid-column: span 3;
		grid-row-start: 2;
		background-color: var(--clr-primary-dk);
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	.grid-4 {
		grid-column: 4 / span 2;
		grid-row-start: 2;
	}

	.grid-3 h2 {
		color: white;
	}
	.grid-3 img {
		width: 2rem;
		height: 2rem;
	}
	@media (max-width: 768px) {
		.grid-section {
			padding: 0 2rem;
			grid-template-columns: 1fr;
			grid-auto-rows: 1fr; /* Equal height rows */
		}

		.grid-element {
			grid-column: 1 !important;
			grid-row: auto !important;
			min-height: 250px; /* Minimum height for all elements */
		}

		/* Adjust image handling */
		.grid-element img {
			height: 250px;
			object-fit: cover; /* Maintain image aspect ratio */
		}

		/* Specific fix for small icon in grid-3 */
		.grid-3 img {
			width: 2rem;
			height: 2rem;
			margin: 1rem 0; /* Add spacing around icon */
		}

		/* Ensure text elements take full height */
		.grid-2,
		.grid-3 {
			height: 100%;
			padding: 2rem; /* Add internal spacing */
			box-sizing: border-box;
		}
	}
</style>
